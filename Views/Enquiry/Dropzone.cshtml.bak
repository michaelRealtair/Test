@using Realtair.Framework.Core.Web

@{ 
    var section = ViewData["Section"] as string;
}

@if (section == "Html")
{
    <div id="dropzone-template">
        <div>
            <span class="preview"><img data-dz-thumbnail /></span>
        </div>
    </div>
}

@if (section == "Scripts")
{
    <script src="http://static.realtair.com/js/dropzone.js"></script>
    <script type="text/javascript">

        // Get the preview node...
        var previewNode = document.querySelector("#template");
        var previewTemplate = previewNode.parentNode.innerHTML;

        // Get props from model
        var model = @Html.Raw(Json.Encode(Model));
        var defaultDropzoneOptions = {
            url: '/',
            thumbnailWidth: 40,
            thumbnailHeight: 40,
            parallelUploads: 10,
            previewTemplate: previewTemplate,
            autoQueue: false, // Make sure the files aren't queued until manually added
            previewsContainer: "#previews", // Define the container to display the previews
            clickable: ".fileinput-button" // Define the element that should be used as click trigger to select files.
        };

        if (model) {
            model.dropzoneOptions = Object.assign(defaultDropzoneOptions, model.dropzoneOptions);
        }
        else {
            model = {
                selectors: {
                    actions: '#actions',
                    start: '.start',
                    cancel: '.cancel'
                },
                dropzoneOptions: Object.assign({}, defaultDropzoneOptions)
            };
        }

        // Initialize Dropzone
        var dz = new Dropzone(document.body, model.dropzoneOptions);

        // Events
        dz.on('addedfile', function (file) {
            // Hookup the start button
            file.previewElement.querySelector(`${model.selectors.start}`).onclick = function() { myDropzone.enqueueFile(file); };
        });

        // On-click Handlers
        document.querySelector(`${model.selectors.actions} ${model.selectors.start}`).onclick = function() {
            myDropzone.enqueueFiles(myDropzone.getFilesWithStatus(Dropzone.ADDED));
        };
        document.querySelector(`${model.selectors.actions} ${model.selectors.cancel}`).onclick = function() {
            myDropzone.removeAllFiles(true);
        };

    </script>
}

