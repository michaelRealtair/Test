@model Realtair.Framework.Core.Actions.Field

@{
    var tableWidget = Model.Value as Realtair.Framework.Core.Entities.Display.TableWidget;
}

@if (tableWidget != null)
{
    <table class="table color-bordered-table muted-bordered-table" style="width: 100%">
        <thead>
            <tr>
                @foreach (var h in tableWidget.Header)
                {
                    <th class="col-md-@h.ColumnWidth"><h4 class="no-margin">@h.Name</h4></th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var row in tableWidget.Contents)
            {
                <tr>
                        @foreach (var item in row)
                        {
                            if (item is Attachment)
                            {
                                <td><a href="@Html.Raw((item as Attachment).Url(0))" target="_blank">@((item as Attachment).Url(0))</a></td>
                            }
                            else
                            {
                                <td><h4 class="no-margin-t l-h-md">@item</h4></td>
                            }
                        }
                
            </tr>
            }

            @if (tableWidget.Totals != null)
            {
                <tr style="background: #222; color: #fff;">
                    @foreach (var item in tableWidget.Totals)
                    {
                        <td><h4 class="no-margin-t l-h-md">@item</h4></td>
                    }
                </tr>
            }
        </tbody>
    </table>
}