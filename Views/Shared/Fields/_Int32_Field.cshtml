@model Realtair.Framework.Core.Actions.Field

@if (Model.HasError)
{
    <div class="form-group has-error">
        <div class="col-sm-3">
            <label class="control-label">@Model.Label</label>
        </div>

        <div class="col-sm-3">
            <input name="@Model.UniqueName" type="number" class="form-control" step="1" value="@Model.Value" onkeypress="return event.charCode >= 48 && event.charCode <= 57" onchange="this.value = Math.round(this.value)">
            <span class="help-block">@Model.ErrorMessage</span>
        </div>
    </div>
}
else
{
    <div class="form-group">
        <div class="col-sm-3">
            <label class="control-label">@Model.Label</label>
        </div>

        <div class="col-sm-3">
            <input name="@Model.UniqueName" type="number" class="form-control" step="1" value="@Model.Value" onkeypress="return event.charCode >= 48 && event.charCode <= 57" onchange="this.value = Math.round(this.value)">
        </div>
    </div>
}
