@model Realtair.Framework.Core.Actions.Field

@if (Model.HasError)
{
    <div class="form-group has-error">
        <div class="col-md-3 col-sm-4">
            <label class="control-label">@Model.Label</label>
        </div>

        <div class="col-md-9 col-sm-8">
            <input name="@Model.UniqueName" type="date" value="@Model.Value" class="form-control">
            <span class="help-block">@Model.ErrorMessage</span>
        </div>
    </div>

}
else
{
    <div class="form-group">
        <div class="col-md-3 col-sm-4">
            <label class="control-label">@Model.Label</label>
        </div>

        <div class="col-md-9 col-sm-8">
            <input name="@Model.UniqueName" type="date" value="@Convert.ToDateTime(Model.Value).ToString("yyyy-MM-dd")" class="form-control">
        </div>
    </div>
}
