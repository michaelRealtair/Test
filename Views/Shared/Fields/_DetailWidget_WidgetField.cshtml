@model Realtair.Framework.Core.Actions.Field

@{
    var widget = Model.Value as Realtair.Framework.Core.Entities.Display.DetailWidget;
}

<div class="panel">
    <div class="panel-heading">@widget.Name</div>
    <div class="panel-wrapper collapse in">
        <table class="table">
            <tbody>
                @foreach (var describable in widget.Details)
                {
                    <tr>
                        <th class="col-sm-4 p-l-40">@describable.Key</th>
                        <td data-key="@describable.Key">
                            @Html.Render(Url, describable.Value)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>