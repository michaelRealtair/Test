@model Realtair.Framework.Core.Actions.Field

@if (Model.HasError)
{
    <div class="form-group has-error">
        <label for="inputEmail3" class="col-sm-2 control-label">@Model.Label</label>
        <div class="col-sm-10">
            <input autofocus type="password" class="form-control lite" id="inputEmail3" name="@Model.UniqueName" placeholder="...">
            <span class="help-block">@Model.ErrorMessage</span>
        </div>
    </div>
}
else
{
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">@Model.Label</label>
        <div class="col-sm-10">
            <input autofocus type="password" class="form-control lite" id="inputEmail3" name="@Model.UniqueName" placeholder="...">
            <small>@Model.FieldAttribute.Help</small>
        </div>
    </div>
}