@model Realtair.Framework.Core.Actions.Field

<div class="form-group">
    <div class="col-md-3 col-sm-4">
        <label class="control-label">@Model.Label</label>
    </div>

    <div class="col-md-9 col-sm-8" style="padding-top: 8px;">
        <label class="radio-inline">
            <input type="radio" name="@Model.PropertyInfo.Name" value="true" @(Convert.ToBoolean(Model.FormValue) ? "checked='checked'" : "")> Yes<br>
        </label>
        <label class="radio-inline">
            <input type="radio" name="@Model.PropertyInfo.Name" value="false" @(!Convert.ToBoolean(Model.FormValue) ? "checked='checked'" : "")> No<br>
        </label>
    </div>
</div>