@model Realtair.Framework.Core.Actions.Field

@if (Model.HasError)
{
    <div class="form-group has-error">
        <label class="col-sm-2 control-label">@Model.Label</label>
        <div class="col-sm-10">
            <input type="text" class="form-control lite" name="@Model.UniqueName" placeholder="@Model.FieldAttribute.Hint" value="@Model.Value">
            <span class="help-block">@Model.ErrorMessage</span>
        </div>
    </div>
}
else
{
    <div class="form-group">
        <label class="col-sm-2 control-label">@Model.Label</label>
        <div class="col-sm-10">
            <input type="text" class="form-control lite" name="@Model.UniqueName" placeholder="@Model.FieldAttribute.Hint" value="@Model.Value">
            <small>@Model.FieldAttribute.Help</small>
        </div>
    </div>
}
