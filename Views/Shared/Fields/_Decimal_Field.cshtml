@model Realtair.Framework.Core.Actions.Field

@if (Model.HasError)
{
    <div class="form-group has-error">
        <div class="col-sm-3">
            <label class="control-label">@Model.Label</label>
        </div>

        <div class="col-sm-3">
            <input autofocus name="@Model.UniqueName" type="number" class="form-control" step="0.01" value="@(((decimal)Model.Value) == 0 ? null : Model.Value)">
            <span class="help-block">@Model.ErrorMessage</span>
        </div>
    </div>
}
else
{
    <div class="form-group">
        <div class="col-sm-3">
            <label class="control-label">@Model.Label</label>
        </div>

        <div class="col-sm-3">
            <input autofocus name="@Model.UniqueName" type="number" class="form-control" step="0.01" value="@(((decimal)Model.Value) == 0 ? null : Model.Value)">
        </div>
    </div>
}
